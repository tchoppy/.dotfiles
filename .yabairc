#!/usr/bin/env sh

# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  5
yabai -m config bottom_padding               5
yabai -m config left_padding                 5
yabai -m config right_padding                5
yabai -m config window_gap                   5

yabai -m space 1 --label terminal
yabai -m space 2 --label code
yabai -m space 3 --label web
yabai -m space 4 --label social
yabai -m space 5 --label media
yabai -m space 6 --label other

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Alacritty$" space=^1
yabai -m rule --add app="^Visual Studio Code$" space=^2
yabai -m rule --add app="^Safari$" space=^3
yabai -m rule --add app="^Google Chrome$" space=^3
yabai -m rule --add app="^Franz$" space=^4
yabai -m rule --add app="^Messages$" space=^4
yabai -m rule --add app="^Music$" space=5
yabai -m rule --add app="^Spotify$" space=5
